using System;

class ArraySortingDemo
{
    static void Main()
    {
        // Declare an array to store 10 elements
        int[] numbers = new int[10];
        // Take 10 elements as input from the user
        Console.WriteLine("Enter 10 elements:");
        for (int i = 0; i < 10; i++)
        {
            Console.Write($"Element {i + 1}: ");
            numbers[i] = int.Parse(Console.ReadLine()); // Input element and store in array
        }
        // Sort the array in ascending order
        Array.Sort(numbers);
        Console.WriteLine("\nArray in ascending order:");
        foreach (int num in numbers)
        {
            Console.Write(num + " ");
        }
    }
}
